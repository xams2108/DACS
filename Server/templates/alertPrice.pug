doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Price Alert Notification
    style.
      body {
        background-color: #0d1117;
        color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 30px;
      }

      .email-container {
        background-color: #161b22;
        border: 1px solid #30363d;
        border-radius: 10px;
        padding: 30px;
        max-width: 600px;
        margin: auto;
      }

      .header {
        font-size: 24px;
        font-weight: bold;
        color: #00e676;
        margin-bottom: 10px;
      }

      .message {
        font-size: 16px;
        color: #c9d1d9;
        margin-bottom: 20px;
        line-height: 1.5;
      }

      .highlight {
        color: #66bb6a;
        font-weight: bold;
      }

      .warning {
        color: #ff9800;
        font-weight: bold;
      }

      .footer {
        font-size: 12px;
        color: #c9d1d9;
        border-top: 1px solid #30363d;
        padding-top: 20px;
        margin-top: 30px;
        text-align: center;
      }

      .action-button {
        display: inline-block;
        background-color: #00e676;
        color: #0d1117;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: bold;
        margin-top: 20px;
      }

      .action-button:hover {
        background-color: #1de9b6;
      }

  body
